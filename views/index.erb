<% if login? %>
  <div class="container-fluid">
    <div class="content">
      <div class="row">
        <div class="col-sm-9">
          <div class="form-group">
            <label for="folders"><%= t("folders.label") %></label>
            <div class="input-group">
              <select class="form-control" id="folders">
                <option value=""><%= t("folders.select") %></option>
                <% @folders.try(:each) do |folder| %>
                <option value="<%=h folder["id"] %>"><%=h folder["name"] %></option>
                <% end %>
              </select>
              <span class="input-group-btn">
                <button id="refresh-folders" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span></button>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <p><%= t(:documents) %></p>
          <ul id="documents" class="list-unstyled">
          </ul>
        </div>
        <div class="col-sm-10">
          <p><%= t("annotations.label") %></p>
          <p class="new-annotation" style="display:none">
            <a href="/news_axis" id="new_annotation"><%= t("annotations.new") %></a>
          </p>
          <ul id="axis" class="list-unstyled">
          </ul>
          <table id="annotations" class="table table-bordered">
          </table>
          <ul id="annotation-panel" style="display:none">
            <li id="annotation-edit" class="btn btn-link btn-warn" href="/edit_annotation"><%= t("annotations.edit") %></li>
            <li id="annotation-delete" class="btn btn-link btn-alert text-right text-danger" href="/delete_annotation"><%= t("annotations.delete") %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
